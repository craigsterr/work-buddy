{
  "manifest_version": 3,
  "name": "Pet Productivity Tracker",
  "version": "1.0",
  "description": "Your pet loses health when you waste time!",
  "permissions": ["tabs", "storage", "scripting", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
